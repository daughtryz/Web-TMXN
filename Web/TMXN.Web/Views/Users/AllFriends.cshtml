@model TMXN.Web.ViewModels.Users.FriendlistListViewModel


@{
    this.ViewData["Title"] = "Your friends";
    this.ViewData["NoFriendsTitle"] = "You haven't added any friends!";
}



@if (Model.Friendlists.Count() == 0)
{
    <h1>@this.ViewData["NoFriendsTitle"]</h1>
}
else
{
    <h1>@this.ViewData["Title"]</h1>
    @foreach (var friendlist in Model.Friendlists)
    {
        if (friendlist.IsTaken)
        {
            <li class="list-group-item">@friendlist.UserName <div><a asp-controller="Users" asp-action="Remove" asp-route-id="@friendlist.Id" type="button" class="btn btn-danger">Remove Friend</a></div></li>
        }


    }
}