@model TMXN.Common.InputModels.Tournaments.TournamentInputModel
@using TMXN.Data.Models.Enums

<form asp-controller="Tournaments" asp-action="Generate">
    <div class="form-group">
        <label for="name">Tournament Name:</label>
        <input asp-for="Name" type="name" class="form-control" id="name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="organizer">Organizer:</label>
        <input asp-for="Organizer" type="organizer" class="form-control" id="organizer">
        <span asp-validation-for="Organizer"></span>
    </div>
    @*<select asp-for="@Model.Name" asp-items="Html.GetEnumSelectList<TournamentGameType>()"/>*@
        <button type="submit" class="btn btn-primary">Create!</button>

</form>
