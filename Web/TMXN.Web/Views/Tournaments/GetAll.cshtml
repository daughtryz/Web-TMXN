
@model TMXN.Web.ViewModels.Tournaments.TournamentsListViewModel


@{
    this.ViewData["Title"] = "Available Tournaments";
}



<h1>@this.ViewData["Title"]</h1>
<h4><button onclick="location.href='@Url.Action("Generate", "Tournaments")'" type="button" class="btn btn-primary center-block">GENERATE TOURNAMENT!</button></h4>


<div class="row">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">###</th>
                <th scope="col">Tournament Name</th>
                <th scope="col">Organizer</th>
                <th scope="col">Enroll</th>
                <th scope="col">##</th>
            </tr>
        </thead>

        @foreach (var tournament in Model.Tournaments)
        {
            <tbody>
                <tr>
                    <th scope="row">#</th>
                    <td>@tournament.Name</td>
                    <td>@tournament.Organizer</td>
                    <td><a href="/Tournaments/Participate?tournamentId=@tournament.Id" type="button" class="btn btn-primary center-block btn-sm">Participate!</a></td>
                    <td><a href="/Tournaments/Info?tournamentId=@tournament.Id" type="button" class="btn btn-primary center-block btn-sm">Info!</a></td>
                </tr>

            </tbody>
        }



    </table>

</div>