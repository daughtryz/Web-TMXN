
@model TMXN.Web.ViewModels.News.NewsFeedsListViewModel

@using TMXN.Common
@{
    this.ViewData["Title"] = "Home Page";
}

@{ int counter = 0;}

    <div class="text-center">

        <h1 class="display-4"><span class="badge badge-info">@GlobalConstants.NewsFeeds</span></h1>

        <div class="card-columns">

            <div class="list-group-horizontal-md d-inline-block" style="width: 220px; background-color: rgba(0,0,255,.1)">

                <vc:tournament></vc:tournament>
                <br>
                <div><a class="nav-link text-dark" asp-area="" asp-controller="Tournaments" asp-action="GetAll">Get involved in!</a></div>
            </div>


            <div class="list-group-horizontal-md d-md-block" style="width: 220px; background-color: rgba(0,0,255,.1)">

                <vc:team></vc:team>
                <br>
                <div><a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="Ranklist">See our ranklist!</a></div>

            </div>

            <div class="list-group-horizontal-md d-md-block" style="width: 220px; background-color: rgba(0,0,255,.1)">

                <vc:award></vc:award>
                <br>
                <div><a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="ShowAll">Get to know our teams!</a></div>

            </div>
        </div>
        <hr style="height: 5px;" class="bg-info" />

        <div class="row">
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="#dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Order news by
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#">Date</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var news in this.Model.News)
            {
                <div class="card mr-4" style="width: 18rem;">
                    <img class="card-img-top" src="@news.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>

                        <a asp-controller="News" asp-action="Info" asp-route-id="@news.Id" class="btn btn-primary center-block">Info</a>

                    </div>
                </div>
            }



        </div>

        @*//carousel*@



        <script>
            $('.dropdown-toggle').dropdown()
        </script>
