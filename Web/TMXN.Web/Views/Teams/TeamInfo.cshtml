
@model TMXN.Web.ViewModels.Teams.TeamInfoViewModel
@{
    this.ViewData["Title"] = "Team Info";
    this.ViewData["AnyAwards"] = "No awards";
}

<h1 class="display-4"><span class="badge badge-info">@this.ViewData["Title"]</span></h1>


<div class="jumbotron jumbotron-fluid align-center">
    <div class="container">
        
        <div class="card mr-3 text-center" style="width: 15rem;">


            <img class="card-img-top" src="@Model.Logo" alt="Card image cap">

            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
            </div>
        </div>
            

        <hr style="height: 5px;" class="bg-info" />


        @if (Model.Awards.Count == 0)
        {
            <h1 class="display-4"><span class="badge badge-danger">@this.ViewData["AnyAwards"]</span></h1>
        }
        else
        {
            <div class="card-columns">

                <div class="list-group-horizontal-md d-inline-block text-center" style="width: 220px; background-color: rgba(0,0,255,.1)">
                    <div class="h-50 d-inline-block" style="width: 220px; background-color: rgba(0,0,255,.1)">

                        <p class="text-center">Awards</p>

                        @foreach (var award in this.Model.Awards)
                        {

                            <ul class="list-group list-group-flush">

                                <li class="list-group-item"><img src="https://www.clipartmax.com/png/middle/85-857448_missions-gold-trophy-render-trophy-render-png.png" alt="Responsive image" class="img-fluid" width="50"> @award.Name</li>

                            </ul>


                        }



                    </div>
                </div>
            </div>
        }
        <hr style="height: 5px;" class="bg-info" />

        <h1 class="display-4"><span class="badge badge-info">Points: @Model.Points</span></h1>
        <hr style="height: 5px;" class="bg-info" />


        <div class="row">



            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Memberlist</th>
                        <th scope="col">Username</th>

                    </tr>
                </thead>

                @foreach (var user in Model.ApplicationUsers)
                {
                    <tbody>
                        <tr>
                            <th scope="row">#</th>
                            <td>@user.UserName</td>

                        </tr>

                    </tbody>
                }



            </table>
        </div>

        <hr>


        <div class="row">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Enrolled tournaments</th>
                        <th scope="col">Tournament Name</th>

                    </tr>
                </thead>

                @foreach (var tournament in Model.Tournaments)
                {
                    <tbody>
                        <tr>
                            <th scope="row">#</th>
                            <td>@tournament.Name</td>


                        </tr>

                    </tbody>
                }



            </table>

        </div>
        </div>
    </div>


