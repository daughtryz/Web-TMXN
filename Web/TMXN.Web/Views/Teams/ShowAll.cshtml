@model TMXN.Web.ViewModels.Teams.TeamsListViewModel

@{
    this.ViewData["Title"] = "Teams";
}

<h1>@this.ViewData["Title"]</h1>

<h4><button onclick="location.href='@Url.Action("Add", "Teams")'" type="button" class="btn btn-primary center-block">Add team!</button></h4>
<div class="row">
    @foreach (var team in this.Model.Teams)
    {

        <div class="media m-4">
            <img class="mr-3" src="@team.Logo" width="100" alt="Generic placeholder image">
            <div class="media-body">
                <h5 class="mt-0">@team.Name</h5>
                @team.Tag
            </div>

        </div>

    }
</div>





