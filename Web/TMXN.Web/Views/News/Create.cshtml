
@model TMXN.Data.Common.InputModels.News.NewsInputModel


<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form asp-controller="News" asp-action="Create">
    <div class="form-group">
        <label for="title">Title:</label>
        <input asp-for="Title" type="title" class="form-control" id="title">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">

        <label for="content">Content:</label>

<textarea asp-for="Content" id="content" rows="4" cols="50">
</textarea>
    </div>
    <div class="form-group">
        <div class="custom-file">
            <label for="imageUrl">ImageUrl:</label>
            <input asp-for="ImageUrl" type="imageUrl" class="form-control" id="imageUrl">
            <span asp-validation-for="ImageUrl"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create!</button>

</form>
