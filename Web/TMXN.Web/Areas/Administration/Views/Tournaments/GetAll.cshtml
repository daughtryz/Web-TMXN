
@model TMXN.Web.ViewModels.Tournaments.TournamentsListViewModel
@using Microsoft.AspNetCore.Identity
@using TMXN.Data.Models

@inject UserManager<ApplicationUser> userManager
@{
    this.ViewData["Title"] = "Available Tournaments";
}



<h1>@this.ViewData["Title"]</h1>
<h4><button asp-area="Administration" onclick="location.href='@Url.Action("Generate", "Tournaments")'" type="button" class="btn btn-primary center-block">GENERATE TOURNAMENT!</button></h4>



    <div class="row">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">###</th>
                    <th scope="col">Tournament Name</th>
                    <th scope="col">Organizer</th>
                   
                    <th scope="col">##</th>
                    <th scope="col">##</th>
                </tr>
            </thead>

            @foreach (var tournament in Model.Tournaments)
            {
                <tbody>
                    <tr>

                        <th scope="row">#</th>
                        <td>@tournament.Name</td>
                        <td>@tournament.Organizer</td>



                        <td><a asp-controller="Tournaments" asp-action="Info" asp-route-id="@tournament.Id" type="button" class="btn btn-primary">Info</a></td>
                        <td><a asp-area="Administration" asp-controller="Tournaments" asp-action="Remove" asp-route-id="@tournament.Id" type="button" class="btn btn-primary">Remove</a></td>
                        <td><a asp-controller="Tournaments" asp-action="Edit" asp-route-id="@tournament.Id" type="button" class="btn btn-primary">Edit</a></td>
                    </tr>

                </tbody>
            }



        </table>

    </div>



