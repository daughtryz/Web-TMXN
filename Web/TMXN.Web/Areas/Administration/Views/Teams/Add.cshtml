@model TMXN.Data.Common.InputModels.Teams.TeamInputModel


<form  asp-area="Administration" asp-controller="Teams" asp-action="Add" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="name">Team Name:</label>
        <input asp-for="Name" type="name" class="form-control" id="name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoImage">Logo:</label>
        <input asp-for="LogoImage" type="file" name="LogoImage">
        <span asp-validation-for="LogoImage"></span>
    </div>
    <div class="form-group">
        <label for="tag">Tag:</label>
        <input asp-for="Tag" type="tag" class="form-control" id="tag">
        <span asp-validation-for="Tag"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create!</button>

</form>

