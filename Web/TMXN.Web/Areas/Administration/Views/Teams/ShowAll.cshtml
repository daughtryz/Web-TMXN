@model TMXN.Web.ViewModels.Teams.TeamsListViewModel
@using Microsoft.AspNetCore.Identity
@using TMXN.Data.Models
@inject UserManager<ApplicationUser> userManager


@{
    this.ViewData["Title"] = "Teams";
}

<h1>@this.ViewData["Title"]</h1>


<h4><button asp-area="Administration" onclick="location.href='@Url.Action("Add", "Teams")'" type="button" class="btn btn-primary center-block">Create your own team!</button></h4>

<div class="row">

    @foreach (var team in this.Model.Teams)
    {

        <div class="card mr-3" style="width: 15rem;">
            <img class="card-img-top" src="@team.Logo" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@team.Name</h5>
                <h2 class="card-title">@team.Tag</h2>



                <a asp-area="Administration" asp-controller="Teams" asp-action="TeamInfo" asp-route-id="@team.Id" type="button" class="btn btn-primary center-block">Info</a>
                <a asp-area="Administration" asp-controller="Teams" asp-action="Edit" asp-route-id="@team.Id" type="button" class="btn btn-primary center-block">Edit</a>
                <hr>
                <a asp-area="Administration" asp-controller="Teams" asp-action="Remove" asp-route-id="@team.Id" type="button" class="btn btn-primary center-block">Remove</a>
                


            </div>
        </div>

    }
</div>





