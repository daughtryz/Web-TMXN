
@model TMXN.Web.ViewModels.News.EditNewsViewModel

@{
    this.ViewData["Title"] = "Edit News";

}


<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form asp-area="Administration" asp-controller="News" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">New Title:</label>
        <input asp-for="Title" type="title" class="form-control" id="title">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">

        <label for="content">New Content:</label>

<textarea asp-for="Content" id="content" rows="4" cols="50">
</textarea>
    </div>
    <div class="form-group">
        <div class="custom-file">
            <label asp-for="Image">New Image:</label>
            <input asp-for="Image" type="file" name="Image">
            <span asp-validation-for="Image"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update!</button>

</form>